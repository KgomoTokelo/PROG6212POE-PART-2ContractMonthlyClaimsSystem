@model ClaimSystem.Models.RegisterViewModel


@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<form asp-action="AddEmployee" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DefaultRatePerJob"></label>
        <input asp-for="DefaultRatePerJob" class="form-control" />
        <span asp-validation-for="DefaultRatePerJob" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <select asp-for="RoleName" class="form-control">
            <option value="Lecturer">Worker</option>
            <option value="HumanResource">Project Manager</option>
            <option value="Manager">Construction Manager</option>
            <option value="HumanResource">HR</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempPassword"></label>
        <input asp-for="TempPassword" class="form-control" type="password" />
        <span asp-validation-for="TempPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Employee</button>
    <a asp-action="EmployeeList" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

