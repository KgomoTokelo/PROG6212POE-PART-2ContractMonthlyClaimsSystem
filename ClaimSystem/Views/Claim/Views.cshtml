@model ClaimSystem.Models.Claims

@{
    ViewData["Title"] = "Claim Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Claim Details</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <!-- Lecturer Info -->
                <div class="col-md-3 text-center">
                    <img src="https://via.placeholder.com/120"
                         class="rounded-circle mb-3" alt="Lecturer Pic">
                    <h5>@Model.Lecturer?.Name</h5>
                    <p class="text-muted">@Model.Lecturer?.Department</p>
                </div>

                <!-- Claim Details -->
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-4">Claim ID</dt>
                        <dd class="col-sm-8">@Model.ClaimID</dd>

                        <dt class="col-sm-4">Module Name</dt>
                        <dd class="col-sm-8">@Model.ModuleName</dd>

                        <dt class="col-sm-4">Submission Date</dt>
                        <dd class="col-sm-8">@Model.SubmissionDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge
                                @(Model.Status == ClaimSystem.Models.Claims.status.Approved ? "bg-success" :
                                                                    Model.Status == ClaimSystem.Models.Claims.status.Submitted ? "bg-info" :
                                                                    Model.Status == ClaimSystem.Models.Claims.status.Rejected ? "bg-danger" :
                                                                    Model.Status == ClaimSystem.Models.Claims.status.Verefied ? "bg-warning" :
                                                                    Model.Status == ClaimSystem.Models.Claims.status.Decline ? "bg-dark" :
                                                                    Model.Status == ClaimSystem.Models.Claims.status.Settled ? "bg-primary" :
                                                                    "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Comments</dt>
                        <dd class="col-sm-8">@Model.Comments</dd>

                        <dt class="col-sm-4">Hours Worked</dt>
                        <dd class="col-sm-8">@Model.HoursWorked</dd>

                        <dt class="col-sm-4">Hourly Rate</dt>
                        <dd class="col-sm-8">R @Model.HourlyRate</dd>

                        <dt class="col-sm-4">Estimated Payment</dt>
                        <dd class="col-sm-8">
                            @{
                                var total = Model.HoursWorked * Model.HourlyRate;
                            }
                            <strong>R @total</strong>
                        </dd>
                    </dl>
                </div>
            </div>

            @*Uploaded Documents Section*@
            <hr />
            <h5 class="mt-4 mb-3">Uploaded Documents</h5>

@if (Model.Documents != null && Model.Documents.Any())
{
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>File Name</th>
                            <th>Uploaded On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.Documents)
                        {
                            <tr>
                                <td>@doc.FileName</td>
                                <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <!-- Updated download button -->
                                    <a class="btn btn-sm btn-primary"
                                       asp-controller="UploadDocuments"
                                       asp-action="Download"
                                       asp-route-id="@doc.DocumentID">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
}
else
{
                <p class="text-muted">No documents have been uploaded for this claim yet.</p>
}

            <div class="mt-3">
                <a asp-controller="UploadDocuments"
                   asp-action="Upload"
                   asp-route-claimId="@Model.ClaimID"
                   class="btn btn-secondary">
                    <i class="bi bi-upload"></i> Upload New Document
                </a>
            </div>

            <!-- Navigation buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Claim" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

