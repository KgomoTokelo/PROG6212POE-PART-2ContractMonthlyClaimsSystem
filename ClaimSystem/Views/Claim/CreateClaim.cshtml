@model ClaimSystem.Models.Claims

@{
    ViewData["Title"] = "Submit New Claim";
}

<h2>Submit New Claim</h2>

<form asp-action="CreateClaim" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="ClaimID" class="control-label">ClaimID</label>
        <input asp-for="ClaimID" class="form-control" readonly />
    </div>


    
        <div class="form-group">
            <label>Lecturer</label>
            <input class="form-control" value="@Model.Lecturer.Name" readonly />
        </div>

  

   

    <div class="form-group">
        <label asp-for="ModuleName" class="control-label">Module Name</label>
        <input asp-for="ModuleName" class="form-control" value="@Model.Lecturer.Department" readonly />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoursWorked" class="control-label">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" id="HoursWorked" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate" class="control-label">SubmissionDate</label>
        <input asp-for="SubmissionDate" class="form-control" />
        <span asp-validation-for="SubmissionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label">Status</label>
        @Html.DropDownListFor(model => model.Status,
                new SelectList(new[] { new { Value = "1", Text = "Submitted" } }, "Value", "Text"),
                new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" })
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>


    
    @*added hours rate*@
    <div class="form-group">
        <label asp-for="HourlyRate" class="control-label">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" value="@Model.Lecturer.DefaultRatePerJob" readonly />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    @*Display for autocalculated amount*@
    <div class="form-group">
        <label>Total Payment</label>
        <input id="TotalPayment" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Comments" class="control-label">Comments</label>
        <textarea asp-for="Comments" class="form-control"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>


    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Submit Claim</button>
        <a asp-action="Claim" class="btn btn-secondary">Cancel</a>
    </div>
</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

        <script>
            function calculateTotal() {
                var hours = parseFloat($('#HoursWorked').val()) || 0;
                var rate = parseFloat($('#HourlyRate').val()) || 0;
                $('#TotalPayment').val((hours * rate).toFixed(2));
            }

            // Trigger calculation when either input changes
            $('#HoursWorked, #HourlyRate').on('input', calculateTotal);
        </script>
    }
}
