@model IEnumerable<ClaimSystem.Models.Claims>

@{
    ViewData["Title"] = "Verify Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verify Claims</h2>

<!-- Guidelines Section -->
<div style="border: 1px solid #ccc; border-radius:10px; padding:15px; margin-bottom:20px; background-color:#f9f9f9;">
    <h4>Verification Guidelines</h4>
    <ul>
        <li>STEM department hourly rate: <strong>R98</strong></li>
        <li>Non-STEM department hourly rate: <strong>R88</strong></li>
        <li>Maximum hours per claim: <strong>8 hours</strong></li>
    </ul>
</div>

<!-- Verified Claims -->
<h3>Verified Claims</h3>
<div style="display: flex; gap: 20px; flex-wrap: wrap; margin-top: 10px;">
    @{
        var verifiedClaims = Model.Where(c => c.Status == ClaimSystem.Models.Claims.status.Verefied);
        if (!verifiedClaims.Any())
        {
            <p class="text-muted">No claims have been verified yet.</p>
        }
        else
        {
            foreach (var claim in verifiedClaims)
            {
                var total = claim.HoursWorked * claim.HourlyRate;
                <div style="border: 1px solid #ccc; border-radius: 10px; padding: 15px; width: 260px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); text-align: center;">
                    <img src="https://via.placeholder.com/80" alt="Lecturer Photo" style="border-radius:50%; margin-bottom:10px;">
                    <h4>@claim.Lecturer.Name</h4>
                    <p><strong>Claim ID:</strong> @claim.ClaimID</p>
                    <p><strong>Amount:</strong> R @total</p>
                    <p><strong>Rate:</strong> R @claim.HourlyRate</p>
                    <p><strong>Department:</strong> @claim.Lecturer.Department</p>
                    <p><strong>Module:</strong> @claim.ModuleName</p>
                    <p><strong>Hours:</strong> @claim.HoursWorked</p>
                    <p><strong>Status:</strong> <span class="badge bg-success">@claim.Status</span></p>
                    <p><em>@claim.Comments</em></p>

                    <!-- Buttons -->
                    <div style="margin-top:15px; display:flex; justify-content:center; gap:10px;">
                        <!-- Manual Override: Reject -->
                        <form asp-action="Reject" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>

                        <!-- Manual Override: Verify (even if already verified) -->
                        <form asp-action="Verify" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-success btn-sm">Verify</button>
                        </form>
                    </div>
                </div>
            }
        }
    }
</div>

<!-- Failed / Rejected Claims -->
<h3 style="margin-top: 40px;">Failed / Rejected Claims</h3>
<div style="display: flex; gap: 20px; flex-wrap: wrap; margin-top: 10px;">
    @{
        var failedClaims = Model.Where(c => c.Status == ClaimSystem.Models.Claims.status.Rejected);
        if (!failedClaims.Any())
        {
            <p class="text-muted">No claims have failed verification.</p>
        }
        else
        {
            foreach (var claim in failedClaims)
            {
                var total = claim.HoursWorked * claim.HourlyRate;
                <div style="border: 1px solid #ccc; border-radius: 10px; padding: 15px; width: 260px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); text-align: center;">
                    <img src="https://via.placeholder.com/80" alt="Lecturer Photo" style="border-radius:50%; margin-bottom:10px;">
                    <h4>@claim.Lecturer.Name</h4>
                    <p><strong>Claim ID:</strong> @claim.ClaimID</p>
                    <p><strong>Amount:</strong> R @total</p>
                    <p><strong>Rate:</strong> R @claim.HourlyRate</p>
                    <p><strong>Department:</strong> @claim.Lecturer.Department</p>
                    <p><strong>Module:</strong> @claim.ModuleName</p>
                    <p><strong>Hours:</strong> @claim.HoursWorked</p>
                    <p><strong>Status:</strong> <span class="badge bg-danger">@claim.Status</span></p>
                    <p><em>@claim.Comments</em></p>

                    <!-- Buttons -->
                    <div style="margin-top:15px; display:flex; justify-content:center; gap:10px;">
                        <!-- Manual Override: Reject again -->
                        <form asp-action="Reject" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>

                        <!-- Manual Override: Verify -->
                        <form asp-action="Verify" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-success btn-sm">Verify</button>
                        </form>
                    </div>
                </div>
            }
        }
    }
</div>
