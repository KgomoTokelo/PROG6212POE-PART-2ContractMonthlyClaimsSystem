@{
    ViewData["Title"] = "Welcome to ClaimSystem";
}

<div class="container mt-5">
 
    <div class="jumbotron text-center p-5 rounded bg-primary text-white shadow-lg">
        <h1 class="display-3">Welcome to ClaimSystem</h1>
        <p class="lead mt-3">
            Your all-in-one platform to manage claims, employees, and approvals efficiently.
        </p>
        <hr class="my-4 bg-light">
        <p class="h5">Get started by navigating to your role-specific portal below.</p>
    </div>

   
    <div class="row mt-5 g-4">
       
        <div class="col-md-3">
            <div class="card h-100 text-center shadow-sm border-primary">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-person-lines-fill display-3 text-primary"></i>
                    </div>
                    <h5 class="card-title">Lecturers</h5>
                    <p class="card-text">
                        Submit claims for teaching hours or projects and track their progress.
                    </p>
                </div>
            </div>
        </div>

      
        <div class="col-md-3">
            <div class="card h-100 text-center shadow-sm border-success">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-check2-square display-3 text-success"></i>
                    </div>
                    <h5 class="card-title">Coordinators</h5>
                    <p class="card-text">
                        Verify submitted claims according to guidelines and provide feedback.
                    </p>
                </div>
            </div>
        </div>

      
        <div class="col-md-3">
            <div class="card h-100 text-center shadow-sm border-warning">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-hand-thumbs-up display-3 text-warning"></i>
                    </div>
                    <h5 class="card-title">Managers</h5>
                    <p class="card-text">
                        Approve verified claims and ensure proper processing of payments.
                    </p>
                </div>
            </div>
        </div>

       
        <div class="col-md-3">
            <div class="card h-100 text-center shadow-sm border-danger">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-people-fill display-3 text-danger"></i>
                    </div>
                    <h5 class="card-title">HR</h5>
                    <p class="card-text">
                        Create employees, view existing employees, and download CSVs. Claims are hidden here.
                    </p>
                </div>
            </div>
        </div>
    </div>

   
    <div class="mt-5 p-4 rounded shadow-lg bg-light border border-info">
        <h4 class="text-center text-info mb-3">Demo Accounts</h4>
        <p class="text-center text-muted mb-4">Use these accounts to explore the workflow. Passwords are demo-only — do not change them.</p>

        <div class="table-responsive">
            <table class="table table-striped table-hover text-center align-middle">
                <thead class="table-info">
                    <tr>
                        <th style="width:25%;">Role</th>
                        <th style="width:45%;">Email</th>
                        <th style="width:30%;">Password</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><span class="badge bg-info">Human Resource</span></td>
                        <td>hr@site.com</td>
                        <td>Hr@123!</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-warning text-dark">Programme Coordinator</span></td>
                        <td>cod@site.com</td>
                        <td>Cod@123!</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-success">Programme Manager</span></td>
                        <td>pm@site.com</td>
                        <td>Pm@123!</td>
                    </tr>
                    <tr>
                        <td><span class="badge bg-secondary">Lecturer</span></td>
                        <td>Lec@site.com</td>
                        <td>Lec@123!</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <p class="text-center mt-3 text-muted fst-italic">
            Start by submitting a claim as Worker, then log in as PM, CM, and HR to process the claim end-to-end.
        </p>
    </div>

</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa 0%, #ffe0b2 100%);
        min-height: 100vh;
    }

    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    .table-responsive {
        overflow-x: auto;
    }

    .badge {
        font-size: 0.9em;
        padding: 0.4em 0.7em;
    }
</style>
