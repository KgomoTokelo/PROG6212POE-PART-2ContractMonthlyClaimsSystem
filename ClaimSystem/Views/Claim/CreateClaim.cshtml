@model ClaimSystem.Models.Claims

@{
    ViewData["Title"] = "Create Claim";
}

<h2>Create Claim</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="CreateClaim" method="post" enctype="multipart/form-data">

    <input asp-for="LecturerID" type="hidden" />

    <div class="form-group">
        <label>Lecturer</label>
        <input class="form-control" value="@Model?.Lecturer?.Name" readonly />
    </div>

    <div class="form-group">
        <label>Department</label>
        <input asp-for="ModuleName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate"></label>
        <input asp-for="SubmissionDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="HoursWorked"></label>
        <input asp-for="HoursWorked" class="form-control" id="HoursWorked" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" readonly id="HourlyRate" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Total Amount</label>
        <input id="TotalAmount" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control"></textarea>
    </div>

    <div class="form-group mb-3">
        <label for="fileUpload">Upload Supporting Document</label>
        <input type="file" name="fileUpload" class="form-control" />
        <small>PDF, DOCX, JPG, PNG (Max 10MB)</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>
    <a asp-action="Claim" class="btn btn-secondary">Cancel</a>

</form>

@section Scripts {
    <script>
        function updateTotal() {
            var hours = parseFloat(document.getElementById("HoursWorked").value) || 0;
            var rate = parseFloat(document.getElementById("HourlyRate").value) || 0;
            document.getElementById("TotalAmount").value = (hours * rate).toFixed(2);
        }

        document.getElementById("HoursWorked").addEventListener("input", updateTotal);

        updateTotal();
    </script>
}
