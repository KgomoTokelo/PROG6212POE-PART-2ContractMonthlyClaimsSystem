@model IEnumerable<ClaimSystem.Models.Claims>

@{
    ViewData["Title"] = "Verify Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verify Claims</h2>

<!-- Guidelines Section -->
<div style="border: 1px solid #ccc; border-radius:10px; padding:15px; margin-bottom:20px; background-color:#f9f9f9;">
    <h4>Verification Guidelines</h4>
    <ul>
        <li>STEM department hourly rate: <strong>R98</strong></li>
        <li>Non-STEM department hourly rate: <strong>R88</strong></li>
        <li>Maximum hours per claim: <strong>8 hours</strong></li>
    </ul>
</div>

<div style="display: flex; gap: 20px; flex-wrap: wrap; margin-top: 20px;">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center">
            <p class="text-muted mt-4">No claims available for verification.</p>
        </div>
    }
    else
    {
        @foreach (var claim in Model)
        {
            var total = claim.HoursWorked * claim.HourlyRate;

            <div style="border: 1px solid #ccc; border-radius: 10px; padding: 15px; width: 260px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); text-align: center;">
                <img src="https://via.placeholder.com/80" alt="Lecturer Photo" style="border-radius:50%; margin-bottom:10px;">
                <h4>@claim.Lecturer.Name</h4>
                <p><strong>Claim ID:</strong> @claim.ClaimID</p>
                <p><strong>Amount:</strong> R @total</p>
                <p><strong>Rate:</strong> R @claim.HourlyRate</p>
                <p><strong>Department:</strong> @claim.Lecturer.Department</p>
                <p><strong>Module:</strong> @claim.ModuleName</p>
                <p><strong>Hours:</strong> @claim.HoursWorked</p>
                <p><strong>Status:</strong> <span class="badge bg-info">@claim.Status</span></p>

                <!-- Verify button -->
                <form asp-action="Verify" asp-route-id="@claim.ClaimID" method="post" style="display:inline;">
                    <button type="submit"
                            style="padding: 8px 15px; border-radius:5px; background-color:#28a745; color:white; border:none; cursor:pointer;">
                        Verify
                    </button>
                </form>

                <!-- Reject button (shows comment box when clicked) -->
                <button type="button"
                        class="reject-btn"
                        data-claimid="@claim.ClaimID"
                        style="margin-left:5px; padding:8px 15px; border-radius:5px; background-color:#dc3545; color:white; border:none; cursor:pointer;">
                    Reject
                </button>

                <!-- Hidden comment form -->
                <form asp-action="Reject" asp-route-id="@claim.ClaimID" method="post" class="comment-form" style="display:none; margin-top:10px;">
                    <textarea asp-for="@claim.Comments" placeholder="Enter reason for rejection..." required
                              style="width: 100%; border-radius:5px; border:1px solid #ccc; padding:5px; resize:none;"></textarea>
                    <button type="submit"
                            style="margin-top:5px; padding:8px 15px; border-radius:5px; background-color:#dc3545; color:white; border:none; cursor:pointer;">
                        Confirm Reject
                    </button>
                </form>
            </div>
        }
    }
</div>

<script>
    document.querySelectorAll('.reject-btn').forEach(button => {
        button.addEventListener('click', () => {
            const form = button.nextElementSibling;
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        });
    });
</script>
