@model IEnumerable<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Approve Claims";
}
<h5>Approval Guidelines</h5>
<div class="alert alert-info">
    <ul>
        <li><strong>STEM Departments:</strong> Minimum <strong>4 hours</strong> required to approve claims.</li>
        <li><strong>Non-STEM Departments:</strong> Minimum <strong>3 hours</strong> required to approve claims.</li>
    </ul>
</div>

<h2 class="mb-4">Claims Pending Approval</h2>


<div class="row">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center">
            <p class="text-muted mt-4">No claims available for approval.</p>
        </div>
    }
    else
    {
        @foreach (var claim in Model)
        {
            var total = claim.HoursWorked * claim.HourlyRate;
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/100"
                             class="rounded-circle mb-2" alt="Lecturer Pic">
                        <h5 class="card-title">@claim.Lecturer.Name</h5>
                        <p><strong>Amount:</strong> R @total</p>
                        <p><strong>Rate:</strong> R @claim.HourlyRate</p>
                        <p><strong>Department:</strong> @claim.Lecturer.Department</p>
                        <p><strong>Module:</strong> @claim.ModuleName</p>
                        <p><strong>Date:</strong> @claim.SubmissionDate.ToString("yyyy-MM-dd")</p>
                        <p><strong>Status:</strong> @claim.Status</p>
                        <p><strong>Hours:</strong> @claim.HoursWorked</p>

                        <div class="d-flex justify-content-center gap-2">
                            <!-- Approve Button -->
                            <form asp-action="Approve" asp-route-id="@claim.ClaimID" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>

                            <!-- Decline Button -->
                            <button type="button" class="decline-btn btn btn-danger btn-sm">Decline</button>
                        </div>

                        <!-- Hidden Comment Form for Decline -->
                        <form asp-action="Decline" asp-route-id="@claim.ClaimID" method="post" class="decline-comment-form mt-2" style="display:none;">
                            <textarea name="Comments" placeholder="Enter reason for decline..." required
                              style="width: 100%; border-radius:5px; border:1px solid #ccc; padding:5px; resize:none;"></textarea>
                            <button type="submit" class="btn btn-danger btn-sm mt-1">Confirm Decline</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        // Show comment form when Decline button is clicked
        document.querySelectorAll('.decline-btn').forEach(button => {
            button.addEventListener('click', () => {
                const form = button.closest('.card-body').querySelector('.decline-comment-form');
                form.style.display = form.style.display === 'none' ? 'block' : 'none';
            });
        });
    </script>
}
